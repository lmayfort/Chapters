<plugin name='security' version='0.1' grailsVersion='1.1 &gt; *'>
  <author>Peter Ledbrook</author>
  <title>Simple security plugin</title>
  <description>\
Provides basic access control based on roles.
</description>
  <documentation>http://grails.org/Security+Plugin</documentation>
  <resources>
    <resource>UrlMappings</resource>
    <resource>DataSource</resource>
    <resource>com.grailsinaction.security.SecurityTagLib</resource>
    <resource>com.grailsinaction.security.LoginController</resource>
    <resource>com.grailsinaction.security.Role</resource>
    <resource>com.grailsinaction.security.Account</resource>
  </resources>
  <dependencies />
</plugin>